<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item><!-- 标题栏 -->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item><!-- 状态栏 -->
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
	<style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/white</item><!-- 标题栏 -->
		<item name="colorPrimaryDark">@color/white</item><!-- 状态栏 -->
		<item name="colorAccent">@color/white</item>
		<item name="android:windowBackground">@color/colorBackground</item>
	</style>
	<style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item><!-- 标题栏 -->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item><!-- 状态栏 -->
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/colorBackground</item>
	</style>
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="IconTextAppearanceStyle" parent="TextAppearance.Design.Tab">
		<item name="textAllCaps">false</item>
	</style>
	<style name="AppTheme.Switch" parent="Theme.AppCompat.Light">
		<!-- switch 打开时的按钮的颜色 轨迹颜色默认为30%（看效果就明白30%是怎么回事了）这个颜色 -->
		<item name="colorControlActivated">@color/colorPrimary</item>
		<!--  switch关闭时的按钮的颜色 -->
		<item name="colorSwitchThumbNormal">@color/colorRemark</item>
		<!-- switch关闭时的轨迹的颜色 30%这个颜色 -->
		<item name="android:colorForeground">@color/colorRemark</item>

	</style>

	<style name="custom">
	</style>
	<style name="custom.button">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">50dip</item>
		<item name="android:layout_marginLeft">15dip</item>
		<item name="android:layout_marginRight">15dip</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/button_selector</item>
	</style>
	<style name="custom.TabLayout" parent="Widget.Design.TabLayout">
		<item name="tabBackground">@color/colorPrimary</item>
	</style>
	<!--textview 功能导航-->
	<style name="custom.navigation">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:background">@drawable/bg_block_selector</item>
		<item name="android:textColor">@color/colorText</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:drawableRight">@drawable/ic_arrow_right</item>
		<item name="android:drawablePadding">15dp</item>
	</style>
	<style name="custom.divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">@color/colorDivider</item>
	</style>
	<style name="custom.block">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/bg_block_selector</item>
		<!--<item name="android:padding">15dp</item>-->
		<item name="android:paddingTop">15.0dip</item>
		<item name="android:paddingBottom">15.0dip</item>
		<item name="android:paddingLeft">15.0dip</item>
		<item name="android:paddingRight">5.0dip</item>
	</style>
	<style name="custom.block.editText" parent="custom.block">
		<item name="android:textColorHint">@color/colorTextHint</item>
		<item name="android:inputType">text</item>
		<item name="android:textColor">@color/colorText</item>
		<item name="android:gravity">left</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="custom.moreTriangle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:paddingTop">5.0dip</item>
		<item name="android:paddingBottom">5.0dip</item>
		<item name="android:paddingLeft">10.0dip</item>
		<item name="android:paddingRight">10.0dip</item>
		<item name="android:layout_marginRight">5.0dip</item>
		<item name="android:src">@drawable/ic_arrow_right</item>
	</style>

</resources>
